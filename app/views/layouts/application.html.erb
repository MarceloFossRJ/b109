<!DOCTYPE html>
<html>
<head>
  <title>Store</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= tinymce_assets %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<div class="navbar navbar-fixed-top">
	  <div class="navbar-inner">
	    <div class="container">
	      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </a>
	      <a class="brand" href="#">B109</a>
	      <div class="nav-collapse">
	        <ul class="nav">
	          <li><%= link_to "Users", users_path %></li>
	        </ul>
	        <ul class="nav">
	          <li><%= link_to "Posts", posts_path %></li>
	        </ul>	
	        <ul class="nav">
	          <li><%= link_to "Tags", tag_groups_path %></li>
	        </ul>
	        <ul class="nav">
	          <li><%= link_to "Categories", categories_path %></li>
	        </ul>
			
			<% if current_user %>
	        <ul class="nav">
	          <li>
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">
					      <%= current_user.email %>
					      <b class="caret"></b>
					    </a>
					<ul class="dropdown-menu">
						  <li><%= link_to "Change Password", change_password_user_path(current_user.id), :method => :get %></li>
						  <li>
							<%= link_to "Logout", login_path(current_user), :method => :delete %>
						  </li>
					</ul>
			  </li>
	        </ul>
	

	  		<% else %>
				<ul class="nav">
		          <li>
					<%= link_to "Admin", login_index_path, :method => :get %>
				  </li>
		        </ul>
			<% end %>


	      </div>
	    </div>
	  </div>
	</div>
	
	<div class="container">
      <% flash.each do |name, msg| %>
	    <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
		  <a class="close" data-dismiss="alert">x</a>
	      <%= msg  %>
	    </div>
	  <% end %>
	
	  <%= yield %>
	</div>
	
</body>
</html>
