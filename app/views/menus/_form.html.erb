<%= simple_form_for @menu, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :menu_type, label: 'Type', collection: menu_type_combo %>

  <%= f.input :name %>
  <%= f.association :page %>

  <%= f.association :menu, label: 'Father', collection: Menu.where("menu_type in (?) and is_active = ?", [1], true).order("menu_order") %>
  <%= f.input :menu_order, collection: 1..10 %>
  <%= f.input :is_active %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                menus_path, :class => 'btn' %>
  </div>
<% end %>
