<%= simple_form_for @parameter, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :group, disabled: true %>
  <%= f.input :name, disabled: true %>
  <% if @parameter.name == 'root_page'%>
    <%= f.input :value, collection: parameter_root_page %>
  <% elsif @parameter.name == 'users_can_add_comment' %>
    <%= f.input :value, collection: true_false %>
  <% elsif @parameter.name == 'only_logged_users_can_add_comment' %>
    <%= f.input :value, collection: true_false %>
  <% elsif @parameter.name == 'comments_published_automatically' %>
    <%= f.input :value, collection: true_false %>
  <% else %>
    <%= f.input :value %>
  <% end %>
  <%= f.input :description, disabled: true, input_html: { rows: '4' } %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                parameters_path, :class => 'btn' %>
  </div>

<% end %>
