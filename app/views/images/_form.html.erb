<%= simple_form_for @image, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :media %>
  <div class="form-actions">
   
	<button type="button" class="btn btn-primary" data-loading-text="Saving..." >Create Image</button>
	
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                images_path, :class => 'btn' %>
  </div>
<% end %>
<script>
$('.btn').on('click', function () {
  $(this).button('loading');
  $('form').submit();
})
</script>

