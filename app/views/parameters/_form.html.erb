<%= simple_form_for @parameter, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :value %>
  <%= f.input :parameter_type, label: 'Type', collection: parameter_type_combo %>
  <%= f.input :description, input_html: { rows: '4' } %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                parameters_path, :class => 'btn' %>
  </div>
<% end %>
